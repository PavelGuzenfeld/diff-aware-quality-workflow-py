[flake8]
# Maximum line length (aligned with black formatter)
max-line-length = 88

# Ignore specific rules that conflict with black or are too strict
extend-ignore = 
    E203,  # Whitespace before ':' (conflicts with black)
    W503,  # Line break before binary operator (outdated)
    E501,  # Line too long (handled by max-line-length)

# Exclude common non-code directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .testmondata

# Per-file ignores - allows gradual adoption for legacy code
# This simulates ignoring pre-existing issues while enforcing quality on new code
per-file-ignores =
    # Example: Ignore unused variable in legacy calculator.py
    # This demonstrates how to work with technical debt
    src/calculator.py:F841
